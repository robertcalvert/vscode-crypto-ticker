{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-var": "warn",
        "no-throw-literal": "warn",
        "no-unused-expressions": "warn",
        "curly": "warn",
        "semi": "warn",
        // class-name
        "eqeqeq": "warn"
    }
}